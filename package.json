{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "rimraf packages/*/lib",
    "lint": "eslint packages/*/src/**/*.{ts,tsx}",
    "build": "cross-env NODE_ENV=production lerna run build",
    "watch": "cross-env NODE_ENV=development lerna run watch --parallel --concurrency 4",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "changelog": "rimraf CHANGELOG.md && node scripts/changelog",
    "prerelease": "yarn clean && yarn build",
    "release": "lerna publish",
    "postrelease": "yarn changelog"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "devDependencies": {
    "@ant-design/react-native": "^3.3.0",
    "@babel/core": "^7.9.6",
    "@babel/runtime": "^7.9.6",
    "@react-native-community/masked-view": "0.1.10",
    "@testing-library/react-native": "^5.0.3",
    "@types/jest": "^25.2.2",
    "@types/node": "10.x",
    "@types/react": "^16.9.35",
    "@types/react-native": "^0.62.9",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "babel-jest": "^26.0.1",
    "conventional-changelog": "^3.1.18",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.6",
    "metro-react-native-babel-preset": "^0.59.0",
    "prettier": "^2.0.4",
    "react": "16.11.0",
    "react-native": "0.62.2",
    "react-native-gesture-handler": "1.6.1",
    "react-native-reanimated": "1.8.0",
    "react-native-safe-area-context": "1.0.0",
    "react-native-screens": "2.7.0",
    "react-test-renderer": "16.13.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "umi": "^3.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
